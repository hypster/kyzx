@import 'var'
.info-page
  nav
    .inner
      display: flex
      a
        color: #fff
      i
        display: inline-block
        vertical-align: -4px
        width: 16px
        height: 21px
        background: url('../img/apply.png') no-repeat
      ul
        &.primary-menu
          float: left
          position: relative
          margin-right: 40px
        &:hover > ul
          opacity: 1
          height: auto
          & > li
            height: auto
        & > ul
          display: flex
          float: left
          width: 200px
          flex-direction: column
          position: absolute
          height: 0
          top: 100%
          left: 0
          right: 0
          opacity: 0
          background-color: #fff
          box-shadow: 1px 1px 1px 1px lightgray
          transition: all ease 0.3s
          a
            box-sizing: border-box
            color: #000
            display: inline-block
            padding: 0 12px 
            width: 100%
            &:hover
              background-color: lightgray
          & > li
            display: inline-block
            float: left
            height: 0
            overflow: hidden
            background-color: #fff
  .main-content
    display: block
    width: 876px
    margin: 0 auto
  .row
    display: flex
  .row table
    box-sizing: border-box
    text-align: left
    border: 1px solid lightgray
    margin-right: 5px
    margin-top: 10px
    &:last-child
      margin-right: 0
    caption
      height: 27px
      line-height: 27px
      color: #fff
      text-align: left
      background-color: lightblue
      padding-left: 14px
    &.loginInfo 
      width: 577px
    &.districtInfo
      width: 292px
    &.basicInfo
      width: 396px
    &.politics
      width: 475px
    &.certificate
      width: 876px
    &.work-info
      width: 876px

    
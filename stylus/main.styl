html
  width: 1024px
  margin: 0 auto
button
  border: none
body
  color: dark
  font: 16px font
header.page-header
  height: 85px
  width: 1024px
  p
    top: 0
    color: gray 
    color: #161616
    font-size: 33px
    line-height: 85px
  .inner
    display: flex
    justify-content: flex-end
    position: relative
    top: -40px
  .status
    display: flex
    justify-content: space-between
    width: 185px
    color: gray
    a
      display: flex
      align-items: center
      color: gray
    i
      width: 12px
      height: 14px
      margin-right: 1px
    a:nth-child(1) i
      background: url('../img/name.png') no-repeat
    a:nth-child(2) i
      width: 18px
      background: url('../img/auth.png') no-repeat
    a:nth-child(3) i
      background: url('../img/exit.png') no-repeat
nav
  height: 46px
  line-height: 46px
  background-color: dark
.inner
  width: 876px
  margin: 0 auto
  h2
    display: flex
    align-items: center
    justify-content: flex-end
  a
    color: #fff
  i
    width: 16px
    height: 21px
    background: url('../img/apply.png') no-repeat
    margin-right: 8px
.main-content
  display: flex
  justify-content: space-between
.left
  width: 700px
  margin-top: 16px
  .row
    display: flex
  .credit-info
    position: relative
    width: 233px
    height: 266px
    margin-right: 8px
    overflow: hidden
    background: url('../img/credit.png') no-repeat
    h1
      position: absolute
      font-size: 28px
      color: rgba(255,255,255,0.8)
      right: 34px
      top: 46px
    a
      position: absolute
      top: 168px
      left: 150px
      background: gray
      font-size: 12px
      font-weight: 100
      line-height: 12px
      padding: 2px 3px
  .more-detail 
    button
      width: 178px
      height: 27px
      background: url('../img/button-more-detail.png') no-repeat
  .course-list
    .row
      display: flex
      justify-content: space-between
      &:first-child
        margin-top: 27px
        margin-bottom: 1px
    .row
      div
        position: relative
        width: 144px
        height: 95px
        background-size: cover
        background-clip: content-box
        margin-right: 1px
        padding: 4px
        box-shadow: 1px 1px 1px 1px #ccc
    .row.row1
      div:nth-child(1)
        background-image: url('../img/course/course1.png')
      div:nth-child(2)
        background-image: url('../img/course/course2.png')
      div:nth-child(3)
        background-image: url('../img/course/course3.png')
    .row.row2
      div:nth-child(1)
        background-image: url('../img/course/course4.png')
      div:nth-child(2)
        background-image: url('../img/course/course5.png')
      div:nth-child(3)
        background-image: url('../img/course/course6.png')
    .row div
      header
        color: yellow
        padding-left: 2px
      a
        position: absolute
        bottom: 6px
        right: 6px
      p
        position: absolute
        top: 50%
        left: 4px
        right: 4px
        line-height: 18px
        padding: 0 30px
        transform: translateY(-50%)
        background-color: rgba(0,0,0,0.3)
        color: rgba(255,255,255,0.8)
        font-size: 13px
        text-align: center
  .applied-course
    margin-top: 12px
    header
      background-color: gray
      position: relative
      height: 22px
      h1
        color: #fff
        text-align: center
        line-height: 22px
      a
        position: absolute
        right: 0
        top: 0
        font-size: 10px
        margin-right: 12px
        line-height: 22px
        color: #ffff00
    .table-wrapper
      padding: 12px
      border: 1px solid #ccc
.right
  margin-top: 14px
  max-width: 160px
  display: flex
  flex-direction: column
  align-items: streach
  justify-content: space-between
  .course-interest
    position: relative
    height: 270px
    padding: 9px
    border: 1px solid #ccc
    border-radius: 6px
    h1
      font-size: 16px
      display: flex
      align-items: center
      border-bottom: 1px solid #ccc
      padding-top: 6px
      padding-bottom: 15px
    i
      width: 27px
      height: 27px
      margin-right: 8px
      background: url('../img/interest.png') no-repeat
    ul
      padding-top: 14px
      max-width: 140px
      li
        font-size: 12px
        line-height: 24px
        text-align: center
        @extend .overflow
        a
          color: gray
    a.more
      font-size: 10px
      padding-top: 16px
      color: blue
      display: inline-block
      position: absolute
      right: 16px
      border-bottom: 1px solid blue
.course
    display: block
    width: 160px
    height: 160px
    overflow: hidden
  img
    width: 100%
footer.page-footer
  margin-top: 20px
  height: 44px
  color: #666
  font-size: 12px
  text-align: center
  

  
  

        
     
      